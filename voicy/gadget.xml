		author="charlau" author_email="charlesmtl@gmail.com"
		author_link="http://charlau.posterous.com" author_location="Switzerland"
		author_aboutme=""
		author_quote=""
		thumbnail=""
		screenshot="http://wave-gadgets.googlecode.com/svn/trunk/voicy/images/voicy-screen.png">
